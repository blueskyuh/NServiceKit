<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="@ServiceNamespace@.DataAccess.DataModel" assembly="@ServiceNamespace@.DataAccess">
	<class name="@ServiceNamespace@.DataAccess.DataModel.@ModelName@Product, @ServiceNamespace@.DataAccess" table="@ModelName@Product" lazy="true">
		<id name="Id" column="Id">
			<generator class="native" />
		</id>
		<property name="CreatedDate" column="CreatedDate" />
		<property name="CreatedBy" column="CreatedBy" />
		<property name="LastModifiedDate" column="LastModifiedDate" />
		<property name="LastModifiedBy" column="LastModifiedBy" />
		<property name="ProductId" column="ProductId" />
		<property name="AssetId" column="AssetId" />
		<property name="ParentId" column="ParentId" />
		<property name="PurchaseDate" column="PurchaseDate" />
		<property name="DownloadStartDate" column="DownloadStartDate" />
		<property name="DownloadCompleteDate" column="DownloadCompleteDate" />
		<many-to-one name="@ModelName@Member" column="@ModelName@Id" class="@ModelName@" />
		<many-to-one name="@ModelName@OrderMember" column="@ModelName@OrderId" class="@ModelName@Order" />
		<bag name="Genres" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="@ModelName@ProductId"></key>
			<one-to-many class="Genre"></one-to-many>
		</bag>
	</class>
</hibernate-mapping>