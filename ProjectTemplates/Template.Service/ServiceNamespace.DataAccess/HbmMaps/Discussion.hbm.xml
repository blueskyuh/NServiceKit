<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="@ServiceNamespace@.DataAccess.DataModel" assembly="@ServiceNamespace@.DataAccess">
	<class name="@ServiceNamespace@.DataAccess.DataModel.Discussion, @ServiceNamespace@.DataAccess" table="Discussion" lazy="true">
		<id name="Id" column="Id">
			<generator class="native" />
		</id>
		<property name="CreatedDate" column="CreatedDate" />
		<bag name="DiscussionPages" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="DiscussionId"></key>
			<one-to-many class="DiscussionPage"></one-to-many>
		</bag>
		<bag name="@ModelName@s" lazy="true" cascade="all"  inverse="true" >
			<key column="DiscussionId"></key>
			<one-to-many class="@ModelName@"></one-to-many>
		</bag>
		<bag name="@ModelName@Sets" lazy="true" cascade="all"  inverse="true" >
			<key column="DiscussionId"></key>
			<one-to-many class="@ModelName@Set"></one-to-many>
		</bag>
	</class>
</hibernate-mapping>