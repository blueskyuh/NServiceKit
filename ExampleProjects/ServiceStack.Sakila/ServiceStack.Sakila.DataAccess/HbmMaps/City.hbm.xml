<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ServiceStack.Sakila.DataAccess.DataModel" assembly="ServiceStack.Sakila.DataAccess">
	<class name="ServiceStack.Sakila.DataAccess.DataModel.City, ServiceStack.Sakila.DataAccess" table="city" lazy="true">
		<id name="Id" column="city_id">
			<generator class="native" />
		</id>
		<property name="Name" column="city" />
		<property name="LastUpdate" column="last_update" />
		<many-to-one name="CountryMember" column="country_id" class="Country" />
		<bag name="addressList" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="city_id"></key>
			<one-to-many class="Address"></one-to-many>
		</bag>
	</class>
</hibernate-mapping>