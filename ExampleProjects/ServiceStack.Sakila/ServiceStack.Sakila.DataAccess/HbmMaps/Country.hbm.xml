<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ServiceStack.Sakila.DataAccess.DataModel" assembly="ServiceStack.Sakila.DataAccess">
	<class name="ServiceStack.Sakila.DataAccess.DataModel.Country, ServiceStack.Sakila.DataAccess" table="country" lazy="true">
		<id name="Id" column="country_id">
			<generator class="native" />
		</id>
		<property name="Name" column="country" />
		<property name="LastUpdate" column="last_update" />
		<bag name="Cities" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="country_id"></key>
			<one-to-many class="City"></one-to-many>
		</bag>
	</class>
</hibernate-mapping>