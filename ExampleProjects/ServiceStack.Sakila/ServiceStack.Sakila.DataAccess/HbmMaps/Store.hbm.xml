<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ServiceStack.Sakila.DataAccess.DataModel" assembly="ServiceStack.Sakila.DataAccess">
	<class name="ServiceStack.Sakila.DataAccess.DataModel.Store, ServiceStack.Sakila.DataAccess" table="store" lazy="true">
		<id name="Id" column="store_id">
			<generator class="native" />
		</id>
		<property name="LastUpdate" column="last_update" />
		<many-to-one name="addressMember" column="address_id" class="address" />
		<many-to-one name="StaffMember" column="manager_staff_id" class="Staff" />
		<bag name="Customers" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="store_id"></key>
			<one-to-many class="Customer"></one-to-many>
		</bag>
		<bag name="Inventories" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="store_id"></key>
			<one-to-many class="Inventory"></one-to-many>
		</bag>
		<bag name="Staffs" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="store_id"></key>
			<one-to-many class="Staff"></one-to-many>
		</bag>
	</class>
</hibernate-mapping>