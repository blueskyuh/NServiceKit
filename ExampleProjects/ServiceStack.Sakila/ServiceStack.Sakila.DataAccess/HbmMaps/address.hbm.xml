<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ServiceStack.Sakila.DataAccess.DataModel" assembly="ServiceStack.Sakila.DataAccess">
	<class name="ServiceStack.Sakila.DataAccess.DataModel.Address, ServiceStack.Sakila.DataAccess" table="address" lazy="true">
		<id name="Id" column="address_id">
			<generator class="native" />
		</id>
		<property name="Line1" column="address" />
		<property name="Line2" column="address2" />
		<property name="District" column="district" />
		<property name="PostalCode" column="postal_code" />
		<property name="Phone" column="phone" />
		<property name="LastUpdate" column="last_update" />
		<many-to-one name="CityMember" column="city_id" class="City" />
		<bag name="Customers" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="address_id"></key>
			<one-to-many class="Customer"></one-to-many>
		</bag>
		<bag name="Staffs" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="address_id"></key>
			<one-to-many class="Staff"></one-to-many>
		</bag>
		<bag name="Stores" lazy="true" cascade="all-delete-orphan"  inverse="true" >
			<key column="address_id"></key>
			<one-to-many class="Store"></one-to-many>
		</bag>
	</class>
</hibernate-mapping>